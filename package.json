{
  "name": "snaptex",
  "displayName": "SnapTeX",
  "description": "A Snappy, Smooth, and Feasible Previewer for LaTeX",
  "version": "0.5.6",
  "icon": "media/icon.png",
  "publisher": "qstatsite",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/qianchd/snaptex.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "latex",
    "preview",
    "tex",
    "equation",
    "math"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:tex"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "latex",
        "extensions": [".tex"],
        "aliases": ["LaTeX", "tex"]
      }
    ],
    "commands": [
      {
        "command": "snaptex.start",
        "title": "SnapTeX Preview: Start",
        "icon": "$(zap)",
        "category": "SnapTeX"
      },
      {
        "command": "snaptex.toggleAutoScroll",
        "title": "SnapTeX: Toggle Auto Scroll",
        "category": "SnapTeX"
      },
      {
        "command": "snaptex.syncToPreview",
        "title": "SnapTeX: Sync to Preview",
        "category": "SnapTeX"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "snaptex.start",
          "when": "resourceLangId == latex",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "snaptex.start",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == latex || editorLangId == tex"
      },
      {
        "command": "snaptex.toggleAutoScroll",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorLangId == latex || editorLangId == tex"
      },
      {
        "command": "snaptex.syncToPreview",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus && (editorLangId == latex || editorLangId == tex)"
      }
    ],
    "configuration": {
      "title": "SnapTeX",
      "properties": {
        "snaptex.livePreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable live preview updates as you type. If disabled, preview updates only on save."
        },
        "snaptex.delay": {
          "type": "number",
          "default": 100,
          "description": "Debounce delay (in milliseconds) for live preview updates."
        },
        "snaptex.renderOnSwitch": {
          "type": "boolean",
          "default": false,
          "description": "If true, automatically renders the new file when switching editor tabs. If false, keeps the previous preview until `snaptex.start` is called again."
        },
        "snaptex.autoScrollSync": {
          "type": "boolean",
          "default": true,
          "description": "Enable cursor and scroll synchronization between editor and preview."
        },
        "snaptex.autoScrollDelay": {
          "type": "number",
          "default": 100,
          "description": "Debounce/Throttle delay (in ms) for scroll synchronization events."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "katex": "^0.16.27",
    "markdown-it": "^14.1.0",
    "pdfjs-dist": "^5.4.449"
  }
}
