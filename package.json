{
  "name": "snaptex",
  "displayName": "SnapTeX",
  "description": "A Snappy, Smooth, and Feasible Previewer for LaTeX",
  "version": "0.0.1",
  "publisher": "qianchd",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/snaptex.git"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "latex",
    "preview",
    "katex",
    "equation",
    "math"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onLanguage:tex"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snaptex.start",
        "title": "SnapTeX Preview: Start",
        "icon": "$(split-horizontal)",
        "category": "SnapTeX"
      },
      {
        "command": "snaptex.syncToPreview",
        "title": "SnapTeX: Sync to Preview",
        "category": "SnapTeX"
      }
    ],
    "keybindings": [
      {
        "command": "snaptex.start",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "editorLangId == latex || editorLangId == tex"
      },
      {
        "command": "snaptex.syncToPreview",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus && (editorLangId == latex || editorLangId == tex)"
      }
    ],
    "configuration": {
      "title": "SnapTeX",
      "properties": {
        "snaptex.renderDebounce": {
          "type": "number",
          "default": 100,
          "description": "Time in milliseconds to wait after the last keystroke before updating the preview."
        },
        "snaptex.enableIncrementalUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Enables high-performance patching of the preview instead of full re-renders for large documents."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@iktakahiro/markdown-it-katex": "^4.0.1",
    "markdown-it": "^14.1.0"
  }
}